{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-var-requires": false,
        "no-console": false,
        "object-literal-sort-keys": false,
        "trailing-comma": [ false ],
        "interface-name" : [true, "never-prefix"],
        "indent": [true, "tabs", 4],
        "jsdoc-format": false,
        "variable-name": false,
        "no-empty-interface": false
    },
    "rulesDirectory": []
}